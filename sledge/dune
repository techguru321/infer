(rule
 (targets sledge-help.txt)
 (deps bin/sledge_cli.ml bin/sledge_buck.ml tools/gen_help.sh
   bin/sledge_cli.exe)
 (action
  (with-stdout-to
   sledge-help.txt
   (run tools/gen_help.sh)))
 (mode promote-until-clean))
